from pynag.Plugins import PluginHelper,ok,warning,critical,unknown

## Create the plugin option
np = PluginHelper()

## Command line arguments
np.parser.add_option("-H", "--hostname",
    help="Hostname to connect to",
    default="localhost",
    )
np.parser.add_option("-P", "--port",
    help="Port to connect with",
    type="int",
    )
np.parser.add_option("-u", "--username",
    help="Username to connect with",
    default="system",
    )
np.parser.add_option("-p", "--password",
    help="Password to connect with",
    default="manager",
    )
np.parser.add_option("-s", "--ssl",
    help="Use SSL when connecting",
    default=False,
    action="store_true",
    )
np.parser.add_option("-c", "--cafile",
    help="CA to verify against when using SSL",
    default="/etc/ssl/certs/ca-certificates.crt",
    )

np.parse_arguments()

# Santiy checks

# Change the port if not set and we're using SSL
if np.options.ssl and not np.options.port:
  # FIXME Add INFO that we are changing the port if verbose
  np.options.port = 5671

# FIXME Check if we need to check if cafile exists or if proton takes care of
# that for us.

try:
  if True:
    np.add_status(ok)
    np.add_summary("Received message %r" % ("meow"))
  else:
    np.add_status(critical)
    np.add_summary("Got no message! %r" % ("ohnoes"))
except Exception, e:
  np.add_summary('ERROR: %s: %r' % (e.__class__.__name__, e))
  np.add_status(critical)

np.exit()
